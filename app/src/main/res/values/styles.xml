<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Test" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/quiz_blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/text_gold</item>
    </style>

    <!-- Custom button style -->
    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/quiz_button</item> <!-- Reference to your drawable -->
        <item name="android:textColor">@color/black</item>            <!-- Text color -->
        <item name="android:textStyle">bold</item>                   <!-- Text style -->
        <item name="android:padding">10dp</item>                    <!-- Padding -->
        <item name="android:layout_width">match_parent</item>        <!-- Width -->
        <item name="android:layout_height">wrap_content</item>       <!-- Height -->
    </style>

    <style name="CustomButtonStyle2">
        <item name="android:background">@drawable/rounded_button</item> <!-- Reference to your drawable -->
        <item name="android:textColor">@color/black</item>            <!-- Text color -->
        <item name="android:textStyle">bold</item>                   <!-- Text style -->
        <item name="android:padding">10dp</item>                    <!-- Padding -->
        <item name="android:layout_width">match_parent</item>        <!-- Width -->
        <item name="android:layout_height">wrap_content</item>       <!-- Height -->
    </style>
</resources>